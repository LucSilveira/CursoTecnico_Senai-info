<?xml version="1.0" encoding="UTF-8"?>
<web-app  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xmlns="http://xmlns.jcp.org/xml/ns/javaee"  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"  id="WebApp_ID"  version="3.1">
  <display-name>ProjectName</display-name>
    <!-- Spring Framework Dispatcher Servlet Configuration -->
	<servlet>
        <servlet-name> springDispatcherServlet</servlet-name>
        <servlet-class> org.springframework.web.servlet.DispatcherServlet </servlet-class>
		
		<!--Classe responsavel por configurar o spring-->
		<init-param>
			<param-name>contextClass</param-name>
			<param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
		</init-param>
		
		<!-- Onde está a classe de configuração do spring -->
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>br.senai.sp.info.pweb.biblioteca.config.WebConfig</param-value>
		</init-param>
		
		<init-param>
	        <param-name>contextClass</param-name>
	        <param-value>org.springframework.web.context.support.AnnotationConfig
	        WebApplicationContext</param-value>
	    </init-param>
	    
	    <init-param>
	        <param-name>contextConfigLocation</param-name>
	        <param-value>package.AppConfig</param-value>
	    </init-param>
        <load-on-startup > 1 </load-on-startup>
    </servlet >

<!--  -->
    <servlet-mapping>
        <servlet-name>springDispatcherServlet</servlet-name>
        <url-pattern>/</url-pattern >
    </servlet-mapping>
</web-app>