<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.acer.mundocelular">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OrganelasActivity"
            android:label="@string/title_activity_organelas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GaleriaActivity"
            android:label="@string/title_activity_galeria"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TiposActivity"
            android:label="@string/title_activity_tipos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AvaliacaoActivity"
            android:label="@string/title_activity_avaliacao"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SobreActivity"></activity>
    </application>

</manifest>