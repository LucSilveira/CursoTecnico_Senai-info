<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AvaliacaoActivity"
    tools:showIn="@layout/app_bar_avaliacao">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Envie a sua opinião!"
        android:textSize="36sp"
        app:fontFamily="casual" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:text="Escreva critícas, perguntas, sugestões, tudo que você queira compartilhar!"
        android:textAlignment="center"
        android:textSize="18sp"
        app:fontFamily="casual" />


    <EditText
        android:id="@+id/edTexto"
        android:layout_width="329dp"
        android:layout_height="74dp"
        android:layout_centerInParent="true"
        android:fontFamily="casual"
        android:ems="10"
        android:inputType="textMultiLine" />
    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        android:background="@color/colorAccent"
        android:text="@string/btnEnviar"
        android:textColor="@android:color/background_light" />

</RelativeLayout>